<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="50dp"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <CheckBox
          android:id="@+id/enableLowerPaceLimit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <EditText
          android:id="@+id/lowerPaceLimitPicker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:hint="@string/lowerPaceLimit"
          android:inputType="numberDecimal" />
      <TextView
          android:id="@+id/lowerPaceLimitUnit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">
      <CheckBox
          android:id="@+id/enableUpperPaceLimit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <EditText
          android:id="@+id/upperPaceLimitPicker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:hint="@string/upperPaceLimit"
          android:inputType="numberDecimal" />
      <TextView
          android:id="@+id/upperPaceLimitUnit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
   </LinearLayout>

</LinearLayout>
