<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">



    <Button
        android:id="@+id/fitness_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:padding="18dp"
        android:layout_margin="5dp"
        android:text="Monday Aug 2023"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/total_dis_birds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/fitness_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Total Discovered Birds"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/total_dis_birds"
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EF6C00 "/>


    <TextView
        android:id="@+id/rarity_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintLeft_toLeftOf="@id/total_dis_birds"
        android:text="Rarity"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/rarity_view"
        android:id="@+id/rarity_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EF6C00 "/>

    <TextView
        android:id="@+id/total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/rarity_line"
        app:layout_constraintLeft_toLeftOf="@id/total_dis_birds"
        android:text="Total score"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/total_score"
        android:id="@+id/total_score_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EF6C00 "/>




</androidx.constraintlayout.widget.ConstraintLayout>
